[src]
http://ftp.openbsd.org/pub/OpenBSD/LibreSSL/libressl-3.1.5.tar.gz

[build]
[ %stage = 0 ] && \
  xconfflags="--host=$($CC -dumpmachine) \
  --with-sysroot=%root"

CPPFLAGS="-D_GNU_SOURCE" \
LDFLAGS="-Wl,-rpath-link=$root/lib" \
  ./configure -C --prefix=%prefix $xconfflags --disable-hardening \
   ac_cv_func_getentropy=no

[ %stage = 0 ] && %stuff/libtool.cross.gen --sysroot=%root

%make
make DESTDIR=%dest install
