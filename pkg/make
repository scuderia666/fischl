[src]
http://ftp.gnu.org/gnu/make/make-3.82.tar.bz2

[build]
[ %stage = 0 ] && CC=%root/bin/musl-gcc
cp -f %stuff/config.sub config/

xconfflags="--build=$($CC -dumpmachine)"
[ %stage = 0 ] && xconfflags="--host=$($CC -dumpmachine)"

CFLAGS="-D_GNU_SOURCE" LDFLAGS="-static" \
./configure -C --prefix=%prefix $xconfflags --disable-nls

%make
make DESTDIR=%dest install
